<section id="main-container">
  <div class="navbar-fixed green darken-2">
    <nav class="green darken-2">
      <div class="nav-wrapper">
        <div class="col s12">
          {{#link-to 'application' class="brand-logo"}}HigherEd{{/link-to}}
          <ul class="right side-nav">
            <li>{{#link-to 'index'}}Home{{/link-to}}</li>
            <li>{{#link-to 'demos.index'}}Demos{{/link-to}}</li>
            {{#if loggedIn}}
              <li>{{#link-to 'logout'}}Logout{{/link-to}}</li>
            {{else}}
              <li>{{#link-to 'login'}}Login{{/link-to}}</li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
  </div>
  
  {{#view "flash" id="flash-view"}}
    <div id="message">
      {{view.content.message}}
    </div>
  {{/view}}

  <div id="main-wrapper">
    {{outlet}}
  </div>

</section>