<div class="signup-container auth-container">
	{{#if loggedIn}}
		Logged In
	{{else}}
		<span class="login-header">Join HigherEd!</span>
		<span class="signup-change">Already a member? {{#link-to 'login'}}Login{{/link-to}}</span>
		<form class="signup-form">
			{{paper-text label="First Name" value=firstName}}
			{{paper-text label="Last Name" value=lastName}}
			{{paper-text label="Email" type="email" value=email}}
			{{paper-text label="Password" type="password" value=password}}
			<div class="row">
				{{!-- <div class="col s12 m6"></div> --}}
				<div class="col s12 m6 offset-m6">{{#paper-button raised=true action="submitForm"}}Sign in{{/paper-button}}</div>
			</div>
		</form>
	{{/if}}
</div>
